{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "endOfLine": "lf",

  "plugins": ["prettier-plugin-solidity"],

  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": false
      }
    }
  ]
}
